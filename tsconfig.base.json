{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@goalie/nextjs": ["packages/goalie-nextjs/src/index.ts"],
			"@goalie/nextjs/server": ["packages/goalie-nextjs/src/server.ts"],
			"@shared/libs": ["packages/shared-libs/src/index.ts"],
			"@shared/models": ["packages/shared-models/src/index.ts"],
			"@shared/ui": ["packages/shared-ui/src/index.ts"],
			"@shared/ui/server": ["packages/shared-ui/src/server.ts"],
			"@shared/validation": ["packages/shared-validation/src/index.ts"],
			"@/services/*": ["packages/ui-app/services/*"],
			"@/store/*": ["packages/ui-app/store/*"],
			"@/components/*": ["packages/ui-app/app/_components/*"],
			"@/hooks/*": ["packages/ui-app/app/_hooks/*"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
