{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["apps/frontend/app/_components/*"],
      "@/events/*": ["apps/frontend/app/_events/*"],
      "@/features/*": ["apps/frontend/app/_features/*"],
      "@/hooks/*": ["apps/frontend/app/_hooks/*"],
      "@/services/*": ["apps/frontend/services/*"],
      "@/store/*": ["apps/frontend/store/*"],
      "@task-runner": ["packages/task-runner/src/main.ts"],
      "@be/storage": ["packages/be-storage/src/index.ts"],
      "@goalie/nextjs": ["packages/goalie-nextjs/src/index.ts"],
      "@goalie/nextjs/server": ["packages/goalie-nextjs/src/server.ts"],
      "@shared/libs": ["packages/shared-libs/src/index.ts"],
      "@shared/models": ["packages/shared-models/src/index.ts"],
      "@shared/pubsub": ["packages/shared-pubsub/src/index.ts"],
      "@shared/ui": ["packages/shared-ui/src/index.ts"],
      "@shared/ui/server": ["packages/shared-ui/src/server.ts"],
      "@shared/validation": ["packages/shared-validation/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
